<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bubble"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/marg1msg"
        android:background="@drawable/bubble_in"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/msg_w"
            android:textColor="@color/grey"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/time_of_sending"
        app:layout_constraintStart_toEndOf="@+id/bubble"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marg1msg"
        app:layout_constraintBottom_toBottomOf="parent"
     />


</androidx.constraintlayout.widget.ConstraintLayout>