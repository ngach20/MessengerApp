<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputFieldStyle">
        <item name="android:textColorHint">@color/color_text_field_hint</item>
        <item name="android:textColor">@color/color_text_field_text</item>
        <item name="android:backgroundTint">@color/color_text_field</item>

        <item name="android:background">@drawable/field_frame</item>

        <item name="android:textSize">@dimen/size_text_input_field</item>

        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>

        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextFieldLayoutStyle">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:letterSpacing">@dimen/spacing_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">@dimen/padding_button_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_button_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_button_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_button_vertical</item>
    </style>

    <style name="PrimaryButtonStyle" parent="ButtonStyle">
        <item name="android:backgroundTint">@color/color_button_primary</item>
        <item name="android:textColor">@color/color_text_button_primary</item>
        <item name="android:elevation">@dimen/elevation_button_primary</item>
        <item name="android:ambientShadowAlpha">0.01</item>
        <item name="android:spotShadowAlpha">0.08</item>
        <item name="android:background">@drawable/background_button_primary</item>
    </style>

    <style name="SecondaryButtonStyle" parent="ButtonStyle">
        <item name="android:backgroundTint">@color/color_border_button_secondary</item>
        <item name="android:textColor">@color/color_text_button_secondary</item>
        <item name="android:background">@drawable/frame_button_secondary</item>
    </style>
</resources>